{% set hero_base_class = 'hero-section' %}
<div {{ bem ('hero')}}>
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="text_left">
                    {% include "@atoms/text/headings/_heading.twig" with {
                        heading_level: 2,
                        heading: heading_content,
                    } %}
                    {% include "@atoms/text/text/01-paragraph.twig" with {
                        paragraph_content: para_content,
                    } %}
                    <div class="text_left_content">
                        {% include "@atoms/buttons/get-button.twig" with {
                            button_data: button_content,
                        } %}
                        {% include "@atoms/text/text/watch-video.twig" %}
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="img_right">
                    {% include "@atoms/images/image/responsive-image.twig" with {
                        img_src: image_src,
                        img_alt: image_alt,
                    } %}
                </div>
            </div>
        </div>
    </div>
</div>